#!/bin/bash
# postinst script for live-light-client
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


. /usr/share/debconf/confmodule
case "$1" in
    configure)

        db_get live-light-client/usb_name
        usb_name=$RET
        db_get live-light-client/pi_address
        pi_address=$RET
        db_get live-light-client/logging_level
        logging=$RET

        pip3 install virtualenv
        virtualenv /usr/share/live-light-client/venv -p python3
        source /usr/share/live-light-client/venv/bin/activate
        pip install -r /usr/share/live-light-client/requirements.txt

        echo '[main]' > /usr/share/live-light-client/live-light-client.conf
        echo "usb_name=${usb_name}" >> /usr/share/live-light-client/live-light-client.conf
        echo "pi_address=${pi_address}" >> /usr/share/live-light-client/live-light-client.conf
        echo "logging_level=${logging}" >> /usr/share/live-light-client/live-light-client.conf
        echo "" >> /usr/share/live-light-client/live-light-client.conf
        db_stop

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
