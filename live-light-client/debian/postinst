#!/bin/bash
# postinst script for live-light-client
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


. /usr/share/debconf/confmodule
case "$1" in
    configure)

        db_get live-light-client/usb_name
        usb_name=$RET
        db_get live-light-client/server_address
        server_address=$RET
        db_get live-light-client/active_days
        active_days=$RET
        db_get live-light-client/start_time
        start_time=$RET
        db_get live-light-client/end_time
        end_time=$RET
        db_get live-light-client/active_color
        active_color=$RET
        db_get live-light-client/inactive_color
        inactive_color=$RET
        db_get live-light-client/logging_level
        logging_level=$RET

        pip3 install virtualenv
        cd /usr/share/live-light-client
        virtualenv venv -p python3
        source venv/bin/activate
        pip install -r requirements.txt

        echo '[main]' > live-light-client.conf
        echo "usb_name=${usb_name}" >> live-light-client.conf
        echo "server_address=${server_address}" >> live-light-client.conf
        echo "" >> live-light-client.conf

        echo '[schedule]' >> live-light-client.conf
        echo "active_days=${active_days}" >> live-light-client.conf
        echo "start_time=${start_time}" >> live-light-client.conf
        echo "end_time=${end_time}" >> live-light-client.conf
        echo "" >>  live-light-client.conf

        echo '[color]' >> live-light-client.conf
        echo "active=${active_color}" >> live-light-client.conf
        echo "inactive=${inactive_color}" >> live-light-client.conf
        echo "" >>  live-light-client.conf

        echo '[other]' >> live-light-client.conf
        echo "logging_level=${logging_level}" >> live-light-client.conf
        echo "" >>  live-light-client.conf
        db_stop

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
